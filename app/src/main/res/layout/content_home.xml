<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.digipodium.www.appone.HomeActivity"
    tools:showIn="@layout/activity_home">

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="200dp">

    </com.tmall.ultraviewpager.UltraViewPager>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ultra_viewpager">

        <TableLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ultra_viewpager">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat_combo" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#8fff"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Combo Deals"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat_main_and_sides" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#8fff"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Main and Sides"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat_starter" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#8fff"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Starter"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat_soup_salad" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#8fff"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Soups &amp; Salads"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat_deserts" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#8fff"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Deserts"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>


            </TableRow>

        </TableLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pbLoader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/container" />

</android.support.constraint.ConstraintLayout>
